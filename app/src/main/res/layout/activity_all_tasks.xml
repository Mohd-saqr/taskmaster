<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEEA"
    tools:context=".Activity.AllTasks">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_all_task"
        android:layout_width="match_parent"
        android:background="@drawable/round_brown"
        android:layout_margin="10dp"
        android:layout_height="60dp"

        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:src="@drawable/task"

        app:layout_constraintBottom_toBottomOf="@+id/toolbar_all_task"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_all_task"
        app:layout_constraintTop_toTopOf="@+id/toolbar_all_task" />

    <TextView
        android:id="@+id/AllTaskTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Task"
        android:textColor="@color/black"
        android:textSize="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar_all_task"/>

    <ImageView
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:src="@drawable/defualte_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/AllTaskTv"
        />



</androidx.constraintlayout.widget.ConstraintLayout>