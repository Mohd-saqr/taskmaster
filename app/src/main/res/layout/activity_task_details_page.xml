<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F4EEEA"
    android:layout_height="match_parent"
    tools:context=".Activity.TaskDetailsPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_task_details_page"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/round_brown"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#388E3C"

        android:id="@+id/text_view_task_stats"
        app:layout_constraintTop_toBottomOf="@id/toolbar_task_details_page"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:text="Description :"
        android:textColor="@color/black"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_task_stats"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/text_view_task_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif"
        android:text="@string/text_view_descreption"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_task_details_page" />

    <ImageView

        android:id="@+id/image_view_task_details"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_task_body"
        app:layout_constraintVertical_bias="0.181"
        app:srcCompat="@drawable/defualte_image" />

    <Button
        android:id="@+id/btn_see_task_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_view_task_details"
        android:background="@drawable/round_brown"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"

        android:text="SEE tASK LOCATION"/>

</androidx.constraintlayout.widget.ConstraintLayout>