<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"



    >

    <androidx.cardview.widget.CardView

        app:cardCornerRadius="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#F40A0A"
                android:layout_margin="5dp"
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:text="title"
                android:textSize="22sp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/text_view_body"
                android:layout_width="match_parent"
                android:text="title"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/text_view_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#06149E"
                android:text="title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_view_taskBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Task by : " />
            <LinearLayout
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:id="@+id/icon_delete_task"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"

                    android:src="@drawable/delete_icon"/>
                <ImageView
                    android:id="@+id/icon_edit_task"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"

                    android:src="@drawable/edit"/>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>